{% extends 'base.jinja2' %}

{% block subtitle %}Add a donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <p><label for="name-input">Name:</label><input id="name-input" type="text" name="name"></p>
    <p><label for="amount">Donation amount:</label><input id="amount" type="numeric" name="amount"></p>
    <p><input type="submit" value="Submit Donation"></p>
</form>
{% endblock content %}